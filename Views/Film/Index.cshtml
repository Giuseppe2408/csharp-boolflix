@model List<Film>

 <div class="container">
        <div class="row justify-content-between">
            @if (Model.Count == 0) {
                <h1>Non ci sono film al momento</h1>

            } 
        
            else 
            {
                    @foreach (Film film in Model)
                    {
                        <div class="card col-3" style="width: 18rem;">
                            <img class="card-img-top" style="height: 200px;" src="" alt="Card image cap">
                            <div class="card-body">
                                <h1>@film.Title</h1>
                                <p class="card-text">@film.Description</p>
                                <h5 class="card-title">@film.Duration</h5>
                            </div>
                        </div>        
                    }
            }
        </div>
</div>